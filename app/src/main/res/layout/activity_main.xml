<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dividerBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="feng.reskin.demo.MainActivity">

    <include layout="@layout/top"/>

    <feng.reskin.demo.QuoteDividerBar
        android:id="@+id/quote_hs_divider3"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/column_titlebar_height"
        android:background="@drawable/hq_section_header_bg"
        dividerBar:left_text="跌幅榜"
        dividerBar:left_textColor="@color/textColor"
        dividerBar:right_text="更多"
        dividerBar:left_textSize="@dimen/TextSize_15"
        dividerBar:right_textColor="@color/grayAA" >
    </feng.reskin.demo.QuoteDividerBar>

    <Button
        android:id="@+id/systemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/image"
        android:text="原生View"
        android:textAllCaps="false"
        android:textColor="@color/textColor"/>

    <Button
        android:id="@+id/customView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/image"
        android:text="自定义View"
        android:textAllCaps="false"
        android:textColor="@color/textColor"/>

    <Button
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/image"
        android:text="Fragment"
        android:textAllCaps="false"
        android:textColor="@color/textColor"/>


</LinearLayout>
